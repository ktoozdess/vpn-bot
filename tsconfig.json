{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext", // Изменено с ES2022
        "moduleResolution": "NodeNext", // Изменено с node
        "lib": ["ES2022"],
        "rootDir": "./src",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "allowImportingTsExtensions": false
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
